<div class ="signin">
	<h1>Please Sign in</h1>

	<%= form_for @user do |form| %>
	<% @user.errors.any? %>
	<% @user.errors.full_messages.each do |msg| %>
		<div class = "alert">
			<p>
				<%= msg %>
			</p>
		</div>
	<% end %>		
  <div class="field">
		<div class = 'inner-div'>
			<h2>Login</h2>
		
				<%= form.text_field :username, placeholder: "Username", :class => 'text' %>

				<%= form.password_field :password, placeholder: "Password", :class => 'text' %>
				<%= form.submit 'Sign In', :class => 'submit' %>
			</div>
		</div>
<% end %>
</div>